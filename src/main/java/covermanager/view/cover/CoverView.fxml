<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import covermanager.view.assistant.AssistantComponent?>

<BorderPane xmlns:fx="http://www.w3.org/1999/xhtml" fx:controller="covermanager.view.cover.CoverController"
            fx:id="root" prefWidth="640" prefHeight="480">

    <center>
        <TabPane>
            <Tab text="Общее" closable="false">
                <VBox>
                    <Label text="Anime"/>
                    <TextField fx:id="animeInput"/>
                    <Label text="Song"/>
                    <TextField fx:id="songInput"/>
                    <Label text="Price"/>
                    <TextField fx:id="priceLabel" editable="false"/>
                    <Label text="Received"/>
                    <TextField fx:id="receivedLabel" editable="false"/>
                </VBox>
            </Tab>
            <Tab text="Заказчики" closable="false">
                <VBox>
                    <HBox>
                        <Button fx:id="addRequesterButton" text="Добавить"/>
                        <Button fx:id="editRequesterButton" text="Изменить"/>
                        <Button fx:id="removeRequesterButton" text="Удалить"/>
                    </HBox>
                    <TableView fx:id="requestersTable">
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                        <columns>
                            <TableColumn fx:id="requesterNameColumn" text="ФИО" prefWidth="100"/>
                            <TableColumn fx:id="requesterValueColumn" text="Сумма" prefWidth="100"/>
                            <TableColumn fx:id="requesterReceivedColumn" text="Переведено" prefWidth="100"/>
                            <TableColumn fx:id="requesterPaymentSystemColumn" text="Система" prefWidth="100"/>
                            <TableColumn fx:id="requesterPaymentDateColumn" text="Дата" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>
            <Tab text="Помощники" closable="false">
                <VBox>
                    <Label text="Translator"/>
                    <AssistantComponent/>
                    <Label text="Audio Mixer"/>
                    <AssistantComponent/>
                    <Label text="Video Producer"/>
                    <AssistantComponent/>
                </VBox>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox>
            <Button fx:id="saveButton" text="Save"/>
            <Button fx:id="cancelButton" text="Cancel"/>
        </HBox>
    </bottom>
</BorderPane>